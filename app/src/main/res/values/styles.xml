<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#7e000000</item>
    </style>

    <style name="tv_style_normal">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyLooperStyle">
        <item name="awv_centerTextColor">@color/colorWhite</item>
        <item name="awv_dividerTextColor">@color/alp_colorWhite</item>
        <item name="awv_initialPosition">0</item>
        <item name="awv_isLoop">true</item>
        <item name="awv_itemsVisibleCount">7</item>
        <item name="awv_lineSpace">2</item>
        <item name="awv_outerTextColor">@color/alp_colorWhite</item>
        <item name="awv_scaleX">1.2</item>
        <item name="awv_textsize">15sp</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:textSize">@dimen/normal_result</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mentionText">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/mention_result</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="dmentionText">
        <item name="android:textSize">@dimen/mention_result</item>
    </style>

</resources>
